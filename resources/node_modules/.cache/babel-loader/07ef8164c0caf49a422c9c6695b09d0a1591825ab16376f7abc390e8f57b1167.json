{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: 'CategoryScreen',\n  data() {\n    return {\n      dataList: [],\n      currentPage: 1,\n      perPage: 10,\n      showModal: false,\n      editForm: {\n        uuid: '',\n        name: '',\n        status: false\n      }\n    };\n  },\n  computed: {\n    totalPages() {\n      return Math.ceil(this.dataList.length / this.perPage);\n    },\n    paginatedData() {\n      const startIndex = (this.currentPage - 1) * this.perPage;\n      const endIndex = startIndex + this.perPage;\n      return this.dataList.slice(startIndex, endIndex);\n    }\n  },\n  mounted() {\n    this.fetchData();\n  },\n  methods: {\n    fetchData() {\n      axios.get('http://localhost:8000/category').then(response => {\n        this.dataList = response.data['data'];\n      }).catch(error => {\n        console.error(error);\n      });\n    },\n    previousPage() {\n      if (this.currentPage > 1) {\n        this.currentPage--;\n      }\n    },\n    nextPage() {\n      if (this.currentPage < this.totalPages) {\n        this.currentPage++;\n      }\n    },\n    deleteItem() {\n      // Implemente a lógica para excluir o item\n    },\n    editItem(item) {\n      this.editForm = {\n        id: item.id,\n        name: item.name,\n        status: item.status\n      };\n      this.showModal = true;\n    },\n    updateItem() {\n      axios.post(`http://localhost:8000/category/${this.editForm.id}`, this.editForm).then(response => {\n        console.log(response.data);\n        this.closeModal();\n      }).catch(error => {\n        console.error(error);\n        this.closeModal();\n      });\n    },\n    closeModal() {\n      this.showModal = false;\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","dataList","currentPage","perPage","showModal","editForm","uuid","status","computed","totalPages","Math","ceil","length","paginatedData","startIndex","endIndex","slice","mounted","fetchData","methods","get","then","response","catch","error","console","previousPage","nextPage","deleteItem","editItem","item","id","updateItem","post","log","closeModal"],"sources":["/home/ldsh-dev/projects/softexpert/resources/src/components/CategoryScreen.vue"],"sourcesContent":["<template>\r\n  <div id=\"category\">\r\n    <h1 class=\"category-title\">Category</h1>\r\n    <div class=\"table-container\">\r\n      <table class=\"table table-transparent\">\r\n        <thead>\r\n          <tr>\r\n            <th>#</th>\r\n            <th>ID</th>\r\n            <th>Name</th>\r\n            <th>Status</th>\r\n            <th>Actions</th>\r\n          </tr>\r\n        </thead>\r\n        <tbody>\r\n          <tr v-for=\"(item, index) in paginatedData\" :key=\"item.uuid\">\r\n            <td>{{ (currentPage - 1) * perPage + index + 1 }}</td>\r\n            <td>{{ item.uuid }}</td>\r\n            <td>{{ item.name }}</td>\r\n            <td>\r\n              <span v-if=\"item.status\" class=\"status-active\">Active</span>\r\n              <span v-else class=\"status-inactive\">Inactive</span>\r\n            </td>\r\n            <td>\r\n              <button class=\"btn btn-primary btn-sm\" @click=\"editItem\">Edit</button>\r\n              <button class=\"btn btn-danger btn-sm\" @click=\"deleteItem\">Delete</button>\r\n            </td>\r\n          </tr>\r\n        </tbody>\r\n      </table>\r\n    </div>\r\n    <div class=\"pagination-container\">\r\n      <button class=\"btn btn-primary btn-sm\" :hidden=\"currentPage === 1\" @click=\"previousPage\">Previous</button>\r\n      <span>{{ currentPage }} / {{ totalPages }}</span>\r\n      <button class=\"btn btn-primary btn-sm\" :hidden=\"currentPage === totalPages\" @click=\"nextPage\">Next</button>\r\n    </div>\r\n\r\n    <div class=\"modal\" :class=\"{ 'is-active': showModal }\">\r\n      <div class=\"modal-background\"></div>\r\n      <div class=\"modal-content\">\r\n        <h2>Edit Category</h2>\r\n        <form @submit=\"updateItem\">\r\n          <div class=\"field\">\r\n            <label class=\"label\">Name:</label>\r\n            <input type=\"text\" v-model=\"editForm.name\" class=\"input\" required>\r\n          </div>\r\n          <div class=\"field\">\r\n            <label class=\"label\">Status:</label>\r\n            <input type=\"checkbox\" v-model=\"editForm.status\" class=\"checkbox\">\r\n          </div>\r\n          <button type=\"submit\" class=\"button is-primary\">Save</button>\r\n          <button class=\"button\" @click=\"closeModal\">Cancel</button>\r\n        </form>\r\n      </div>\r\n      <button class=\"modal-close\" @click=\"closeModal\"></button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'CategoryScreen',\r\n  data() {\r\n    return {\r\n      dataList: [],\r\n      currentPage: 1,\r\n      perPage: 10,\r\n      showModal: false,\r\n      editForm: {\r\n        uuid: '',\r\n        name: '',\r\n        status: false\r\n      }\r\n    };\r\n  },\r\n  computed: {\r\n    totalPages() {\r\n      return Math.ceil(this.dataList.length / this.perPage);\r\n    },\r\n    paginatedData() {\r\n      const startIndex = (this.currentPage - 1) * this.perPage;\r\n      const endIndex = startIndex + this.perPage;\r\n      return this.dataList.slice(startIndex, endIndex);\r\n    }\r\n  },\r\n  mounted() {\r\n    this.fetchData();\r\n  },\r\n  methods: {\r\n    fetchData() {\r\n      axios.get('http://localhost:8000/category')\r\n        .then(response => {\r\n          this.dataList = response.data['data'];\r\n        })\r\n        .catch(error => {\r\n          console.error(error);\r\n        });\r\n    },\r\n    previousPage() {\r\n      if (this.currentPage > 1) {\r\n        this.currentPage--;\r\n      }\r\n    },\r\n    nextPage() {\r\n      if (this.currentPage < this.totalPages) {\r\n        this.currentPage++;\r\n      }\r\n    },\r\n    deleteItem() {\r\n      // Implemente a lógica para excluir o item\r\n    },\r\n    editItem(item) {\r\n      this.editForm = {\r\n        id: item.id,\r\n        name: item.name,\r\n        status: item.status\r\n      };\r\n      this.showModal = true;\r\n    },\r\n    updateItem() {\r\n      axios.post(`http://localhost:8000/category/${this.editForm.id}`, this.editForm)\r\n        .then(response => {\r\n          console.log(response.data);\r\n          this.closeModal();\r\n        })\r\n        .catch(error => {\r\n          console.error(error);\r\n          this.closeModal();\r\n        });\r\n    },\r\n    closeModal() {\r\n      this.showModal = false;\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n\r\n<style scoped>\r\n#category {\r\n  margin-top: 20px;\r\n  text-align: center;\r\n}\r\n\r\n.category-title {\r\n  font-size: 28px;\r\n  margin-bottom: 20px;\r\n  color: #333;\r\n}\r\n\r\n.table-container {\r\n  max-width: 800px;\r\n  margin: 0 auto;\r\n}\r\n\r\nth{\r\n  background: #0091ed;\r\n  color: white;\r\n}\r\n\r\ntr,\r\ntd{\r\n  background: whitesmoke;\r\n}\r\n\r\n.btn {\r\n  margin-right: 10px;\r\n}\r\n\r\nh1{\r\n  color:#0091ed !important;\r\n}\r\n\r\n.status-active {\r\n  color: green;\r\n}\r\n\r\n.status-inactive {\r\n  color: red;\r\n}\r\n\r\n.modal {\r\n  background-color: rgba(0, 0, 0, 0.5);\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n}\r\n\r\n.modal-content {\r\n  background-color: #fff;\r\n  padding: 20px;\r\n  border-radius: 5px;\r\n}\r\n\r\n.modal-background {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  right: 0;\r\n  bottom: 0;\r\n}\r\n\r\n\r\n</style>"],"mappings":"AA4DA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,gBAAgB;EACtBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,EAAE;MACZC,WAAW,EAAE,CAAC;MACdC,OAAO,EAAE,EAAE;MACXC,SAAS,EAAE,KAAK;MAChBC,QAAQ,EAAE;QACRC,IAAI,EAAE,EAAE;QACRP,IAAI,EAAE,EAAE;QACRQ,MAAM,EAAE;MACV;IACF,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,UAAUA,CAAA,EAAG;MACX,OAAOC,IAAI,CAACC,IAAI,CAAC,IAAI,CAACV,QAAQ,CAACW,MAAK,GAAI,IAAI,CAACT,OAAO,CAAC;IACvD,CAAC;IACDU,aAAaA,CA